# EditorConfig is awesome: https://EditorConfig.org
# Keep only one .editorconfig at the repo root.
# Remove duplicates from subfolders.

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4

# Python docstrings and comments
[*.py]
# Allow long lines in docstrings and comments
max_line_length = 120

# Python test files
[test_*.py]
indent_style = space
indent_size = 4

# Python setup and config files
[setup.py]
indent_style = space
indent_size = 4

[pyproject.toml]
indent_style = space
indent_size = 4

[*.cfg]
indent_style = space
indent_size = 4

[*.ini]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Docker files
[Dockerfile]
indent_style = space
indent_size = 4

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2

# JavaScript files
[*.js]
indent_style = space
indent_size = 2

# TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 4

# Configuration files
[.editorconfig]
indent_style = space
indent_size = 2

[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

# Documentation files
[docs/**]
indent_style = space
indent_size = 2

# Scripts directory
[scripts/**]
indent_style = space
indent_size = 2

# Tests directory
[tests/**]
indent_style = space
indent_size = 4

# Source code directory
[src/**]
indent_style = space
indent_size = 4

# GitHub workflows
[.github/workflows/*.yml]
indent_style = space
indent_size = 2

# Copilot configuration
[.copilot/**]
indent_style = space
indent_size = 2

# License and README files
[LICENSE]
indent_style = space
indent_size = 2

[README.md]
indent_style = space
indent_size = 2

[CHANGELOG.md]
indent_style = space
indent_size = 2

[CONTRIBUTING.md]
indent_style = space
indent_size = 2

[SECURITY.md]
indent_style = space
indent_size = 2

[WORKFLOW.md]
indent_style = space
indent_size = 2

[PROJECT_GOALS.md]
indent_style = space
indent_size = 2